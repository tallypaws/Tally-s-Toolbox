{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["packages/*/src"],
  "exclude": ["node_modules", "**/node_modules"]
}
